<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="GroupTest_Suite">
    <test name="Group_Test_Cases" verbose="2">

        <!--        verbose = how much detail you want in the output log -->
        <!--        thread-count = how many threads to run tests simultaneously-->

        <groups>
            <run>
                <!--                <exclude name="R"/>-->
                <include name="S"/>
            </run>
        </groups>
        <classes>
            <class name="TestNG.TestGrouping"/>
        </classes>
    </test>
</suite>